<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Team :Form-->
    <record id="qc_team_view_form" model="ir.ui.view">
        <field name="name">qc.team.form</field>
        <field name="model">qc.team</field>
        <field name="arch" type="xml">
            <form string="Maintenance Team">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Nom de l'Ã©quipe"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="member_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Team :Tree-->

    <record id="mro_team_view_tree" model="ir.ui.view">
        <field name="name">mro.team.tree</field>
        <field name="model">qc.team</field>
        <field name="arch" type="xml">
            <tree string="Maintenance Team" editable="bottom">
                <field name="name"/>
                <field name="member_ids" widget="many2many_tags"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- Team:Actions-->
    <record id="action_quality_team" model="ir.actions.act_window">
        <field name="name">Quality control team</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">qc.team</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!--Team :Menu-->
    <menuitem
            id="menu_qc_teams"
            name="Quality control team"
            parent="qc_menu_test_parent"
            action="action_quality_team"
            sequence="1"/>

</odoo>
