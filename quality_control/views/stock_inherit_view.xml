<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="quality_stock_picking" model="ir.ui.view">
        <field name="name">quality.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button type="object"
                        name="quality_inspection_action"
                        attrs="{'invisible': [('inspection_count', '=', 0)]}"
                        class="oe_stat_button"
                        icon="fa-check-circle-o">
                    <field name="inspection_count" widget="statinfo" string="Quality Inspections"
                           help="Quality Inspections"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>