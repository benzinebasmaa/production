<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--Outils-->

        <!-- Outil Tree View  -->

        <record id="outils_tree" model="ir.ui.view">
            <field name="name">Outils- tree</field>
            <field name="model">equipement.outils</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="nom"/>
                    <field name="Outils_number"/>
                    <field name="purchase_price"/>
                    <field name="cout"/>
                    <field name="quantité_stock"/>
                    <field name="quantité_prévu"/>
                </tree>
            </field>
        </record>
        <!-- Outil Form View  -->

        <record id="outils_form" model="ir.ui.view">
            <field name="name">Outils form</field>
            <field name="model">equipement.outils</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="image" widget="image" class="oe_avatar oe_left"/>
                            <field name="nom"/>
                            <field name="Outils_number"/>
                            <field name="purchase_price"/>
                            <field name="cout"/>
                            <field name="quantité_stock"/>
                            <field name="quantité_prévu"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Outil Kanban View  -->

        <record id="equipement_outils_view_kanban" model="ir.ui.view">
            <field name="name">equipement kanban</field>
            <field name="model">equipement.outils</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="id"/>
                    <field name="image"/>
                    <field name="nom"/>
                    <field name="Outils_number"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_vignette">
                                <div class="col-2">
                                    <a type="open">
                                        <img t-att-src="kanban_image('equipement.outils', 'image', record.id.raw_value)"
                                             t-att-title="record.id.value" t-att-alt="record.id.value"
                                             height="90" style="max-width: 100;" alt="Image de l'Outil"/>
                                    </a>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="nom"/>
                                    </strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>N° Outil :
                                            <field name="Outils_number"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

       <!-- Outil Action View  -->

        <record id="outils_action" model="ir.actions.act_window">
            <field name="name">Outils</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">equipement.outils</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Ajouter un outil
                </p>
            </field>
        </record>

        <!-- Outil Menu   -->

        <menuitem id="equipement_outils"
                  name="Outils"
                  parent="base.menu_root"
                  action="outils_action"
                  sequence="101"/>

    </data>
</openerp>


